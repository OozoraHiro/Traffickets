<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.home.AddNewViolation">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/violator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Violator's"
                android:textColor="@color/my_primary"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/violators_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15sp"/>


            <EditText
                android:id="@+id/violators_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Number"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/license_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate Number"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/plate_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"

                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vehicle Type:"
                android:textSize="15sp"
                android:layout_margin="5dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Motorcycle"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tricycle"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Car"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Truck"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Violations:"
                android:textSize="15dp"
                android:layout_margin="5dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Driving without valid License"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Not wearing a seatbelt"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reckless Driving"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Under Influence of Alcohol and/or Prohibited Drugs"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No helmet"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Obstruction"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Plate Number not firmly attached"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="LTO Sticker Violation"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tampering with License Plates"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Driving with defective light"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Disregarding Traffic Signs"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Smoke belching"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Cancel" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>